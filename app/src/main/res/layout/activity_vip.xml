<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include android:id="@+id/top"
            layout="@layout/top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/jifenbeijing">

                <!-- 会员充值升级 -->
                <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="@dimen/dp15">

                    <ImageView
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp3"
                        android:background="@color/member_line"
                        android:layout_marginRight="@dimen/dp15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会员充值升级"
                        android:textSize="@dimen/sp15"
                        android:textColor="@color/text_black"
                        android:gravity="center"/>

                    <ImageView
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp3"
                        android:background="@color/member_line"
                        android:layout_marginLeft="@dimen/dp15"/>

                </LinearLayout>

                <!-- 黄金会员 -->
                <RelativeLayout
                    android:id="@+id/rl_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/jifenblack"
                    android:layout_below="@+id/ll_1"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp15">

                    <TextView
                        android:id="@+id/tv_huangjin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="黄金会员"
                        android:textColor="@color/text_member"
                        android:textSize="@dimen/sp22"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp25"/>

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_money"
                        android:textSize="@dimen/sp40"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_huangjin"
                        android:layout_marginTop="@dimen/dp24"/>

                    <TextView
                        android:id="@+id/tv_quanyi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/shouyi"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/text_member"
                        android:layout_below="@+id/tv_money"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp155"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_quanyi"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp10">

                        <Button
                            android:id="@+id/bt_huangjinchongzhi"
                            android:layout_width="130dp"
                            android:layout_height="@dimen/dp35"
                            android:background="@drawable/shapevip"
                            android:text="立即充值"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/sp16"
                            android:textStyle="bold"/>

                    </RelativeLayout>



                </RelativeLayout>

                <!-- 钻石会员 -->
                <RelativeLayout
                    android:id="@+id/rl_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/jifenblack"
                    android:layout_below="@+id/rl_1"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp10">

                    <TextView
                        android:id="@+id/tv_zuanshi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="钻石会员"
                        android:textColor="@color/text_member"
                        android:textSize="@dimen/sp22"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp25"/>

                    <TextView
                        android:id="@+id/tv_zuanshimoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_money"
                        android:textSize="@dimen/sp40"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_zuanshi"
                        android:layout_marginTop="@dimen/dp15"/>

                    <TextView
                        android:id="@+id/tv_quanyi1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/shouyi"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/text_member"
                        android:layout_below="@+id/tv_zuanshimoney"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp155"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_quanyi1"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp10">

                        <Button
                            android:id="@+id/bt_zuanshichongzhi"
                            android:layout_width="130dp"
                            android:layout_height="@dimen/dp35"
                            android:background="@drawable/shapevip"
                            android:text="立即充值"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/sp16"
                            android:textStyle="bold"/>

                    </RelativeLayout>



                </RelativeLayout>

                <!-- 会员免费升级 -->
                <LinearLayout
                    android:id="@+id/ll_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_below="@+id/rl_2"
                    android:layout_marginTop="@dimen/dp16"
                    android:layout_marginBottom="@dimen/dp15">

                    <ImageView
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp3"
                        android:background="@color/member_line"
                        android:layout_marginRight="@dimen/dp15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会员免费升级"
                        android:textSize="@dimen/sp15"
                        android:textColor="@color/text_black"
                        android:gravity="center"/>

                    <ImageView
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp3"
                        android:background="@color/member_line"
                        android:layout_marginLeft="@dimen/dp15"/>

                </LinearLayout>

                <!-- 会员免费升级规则 -->
                <LinearLayout
                    android:id="@+id/ll_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/ll_2"
                    android:paddingRight="@dimen/dp15"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingBottom="@dimen/dp8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/jifen_member1"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp14"
                        android:padding="@dimen/dp5"
                        android:lineSpacingExtra ="@dimen/dp10"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_3"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15">

                    <Button
                        android:id="@+id/bt_free_huangjin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="免费申请黄金会员"
                        android:textSize="@dimen/sp16"
                        android:textColor="@color/white"
                        android:background="@mipmap/jifenbtn"
                        android:layout_marginRight="@dimen/dp5"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/bt_free_zuanshi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="免费申请钻石会员"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp16"
                        android:background="@mipmap/jifenbtn"
                        android:layout_marginLeft="@dimen/dp5"
                        android:textStyle="bold"/>



                </LinearLayout>


            </RelativeLayout>



        </LinearLayout>

    </LinearLayout>


</ScrollView>
