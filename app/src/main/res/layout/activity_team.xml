<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:orientation="horizontal">

        <!--我的会员 -->
        <LinearLayout
            android:id="@+id/layout_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/member"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:background="@mipmap/member" />

            <TextView
                android:id="@+id/text_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp15"
                android:text="@string/my_menber"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp13" />
        </LinearLayout>

        <!--团队排名 -->
        <LinearLayout
            android:id="@+id/layout_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/team"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:background="@mipmap/paiming" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/team"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp13"/>


        </LinearLayout>

        <!--商户查询 -->
        <LinearLayout
            android:id="@+id/layout_business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/business"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:background="@mipmap/team" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:layout_weight="1"
                android:text="@string/my_business"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp13"/>
        </LinearLayout>

        <!--激活明细 -->
        <LinearLayout
            android:id="@+id/layout_activate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/activate"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:background="@mipmap/activate"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:text="@string/activate"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp13"/>

        </LinearLayout>

        <!--收益说明 -->
        <LinearLayout
            android:id="@+id/layout_earnings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/earnings"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:background="@mipmap/earnings" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:layout_weight="1"
                android:text="@string/earnings"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp13"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/sp15"
        android:layout_marginRight="@dimen/sp15"
        android:layout_marginTop="@dimen/dp15">

        <!--我的会员-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp3"
                android:layout_height="match_parent"
                android:background="@color/main"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp3"
                android:layout_marginBottom="@dimen/dp3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的会员"
                android:textSize="@dimen/sp16"
                android:textColor="@color/text_black"
                android:layout_marginLeft="@dimen/dp10"/>

        </LinearLayout>

        <!--我的盟友总人数-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp24"
            android:gravity="center"
            android:text="我的下级会员总人数"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp15"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp24"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_huiyuanren"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:gravity="center"
                android:textColor="@color/main"
                android:textSize="@dimen/sp24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="人"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp13"
                android:layout_marginLeft="@dimen/dp5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp25">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/text_gray"
                    android:text="当日新增会员"/>
                <TextView
                    android:id="@+id/tv_huiyuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/text_gray"
                    android:layout_toRightOf="@+id/tv3"
                    android:layout_marginLeft="@dimen/dp10"/>
                <TextView
                    android:id="@+id/tv_ren2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_huiyuan"
                    android:text="人"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/text_gray"
                    android:layout_marginLeft="@dimen/dp3"/>


            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp3"
                android:layout_height="match_parent"
                android:background="@color/line"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/text_gray"
                    android:text="当日激活台数"/>
                <TextView
                    android:id="@+id/tv_jihuo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/text_gray"
                    android:layout_toRightOf="@+id/tv1"
                    android:layout_marginLeft="@dimen/dp10"/>
                <TextView
                    android:id="@+id/tv_ren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_jihuo"
                    android:text="台"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/text_gray"
                    android:layout_marginLeft="@dimen/dp3"/>


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/sp15"
        android:layout_marginRight="@dimen/sp15"
        android:layout_marginTop="@dimen/dp15">

        <!--我的直营-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dp3"
                android:layout_height="match_parent"
                android:background="@color/main"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp3"
                android:layout_marginBottom="@dimen/dp3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的直营"
                android:textSize="@dimen/sp16"
                android:textColor="@color/text_black"
                android:layout_marginLeft="@dimen/dp10"/>

        </LinearLayout>

        <!--我的下级会员总人数-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp24"
            android:gravity="center"
            android:text="本月交易总金额"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp15"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp24"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0.00"
                android:gravity="center"
                android:textColor="@color/main"
                android:textSize="@dimen/sp24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="元"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp15"
                android:layout_marginLeft="@dimen/dp5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp25">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp13"
                    android:textColor="@color/text_gray"
                    android:text="当日激活商户"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp5">
                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/sp13"
                        android:textColor="@color/text_gray"
                        android:layout_toRightOf="@+id/tv1"
                        android:layout_marginLeft="@dimen/dp10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_number"
                        android:text="人"
                        android:textSize="@dimen/sp13"
                        android:textColor="@color/text_gray"
                        android:layout_marginLeft="@dimen/dp3"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp3"
                android:layout_height="match_parent"
                android:background="@color/line"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp8"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/text_gray"
                    android:text="当前直营商户"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp5">
                    <TextView
                        android:id="@+id/tv_zhiyingnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/sp12"
                        android:textColor="@color/text_gray"
                        android:layout_toRightOf="@+id/tv1"
                        android:layout_marginLeft="@dimen/dp10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_number"
                        android:text="人"
                        android:textSize="@dimen/sp12"
                        android:textColor="@color/text_gray"
                        android:layout_marginLeft="@dimen/dp3"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
