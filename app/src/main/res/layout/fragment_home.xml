<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refreshLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dp10">
            <!--banner-->
            <RelativeLayout
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:orientation="vertical">
                <com.jude.rollviewpager.RollPagerView
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <com.ykh.yinmeng.ymykh2.wideget.viewpager.VerticalScrollTextView
                    android:id="@+id/tv_roll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp30"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp11"
                    android:background="@color/background"
                    android:scaleType="centerCrop"
                    android:paddingLeft="@dimen/dp15"
                    app:vst_animDuration="1000"
                    app:vst_scrollOrientation="up"
                    app:vst_singleLine="true"
                    app:vst_sleepTime="2000"
                    app:vst_textColor="@color/white"
                    app:vst_textSize="14sp"/>

            </RelativeLayout>

            <!--gridview自选按钮-->
            <RelativeLayout
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/banner"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20">

                <!--商户自采、邀请会员、积分兑换、团队信息-->
                <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/layout1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/gridview1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:text="@string/girdview1"
                            android:layout_marginTop="@dimen/dp8"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/gridview2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:text="@string/girdview2"
                            android:layout_marginTop="@dimen/dp8"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/gridview3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:text="@string/girdview3"
                            android:layout_marginTop="@dimen/dp8"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/gridview4"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:text="@string/girdview4"
                            android:layout_marginTop="@dimen/dp8"/>

                    </LinearLayout>

                </LinearLayout>
                <!--推广收益、实名认证、信用卡、商户拓展-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/ll_1"
                    android:layout_marginTop="@dimen/dp10">
                    <LinearLayout
                        android:id="@+id/layout5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/gridview5"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:text="@string/girdview5"
                            android:layout_marginTop="@dimen/dp8"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/gridview6"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:text="@string/girdview6"
                            android:layout_marginTop="@dimen/dp8"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/gridview7"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:text="@string/girdview7"
                            android:layout_marginTop="@dimen/dp8"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/gridview8"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:text="@string/girdview8"
                            android:layout_marginTop="@dimen/dp8"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <!--公告-->
            <RelativeLayout
                android:id="@+id/notice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30"
                android:layout_below="@+id/gridview"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginLeft="@dimen/dp15"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/notice"
                    android:layout_centerVertical="true"/>

                <com.ykh.yinmeng.ymykh2.wideget.viewpager.VerticalScrollTextView
                    android:id="@+id/v_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/img_notice"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    app:vst_animDuration="1000"
                    app:vst_scrollOrientation="up"
                    app:vst_singleLine="true"
                    app:vst_textColor="@color/text_black"
                    app:vst_textSize="14sp" />

            </RelativeLayout>

            <!--当月业绩-->
            <RelativeLayout
                android:id="@+id/rl_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:layout_marginTop="@dimen/dp15"
                android:layout_below="@+id/notice">

                <RelativeLayout
                    android:id="@+id/layout_results"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="@dimen/dp3"
                        android:layout_height="@dimen/dp14"
                        android:background="@drawable/shape5"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/results"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp14"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_below="@+id/layout_results">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/total"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp13"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_below="@+id/rl_total"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0.00"
                        android:textColor="@color/main"
                        android:textSize="@dimen/sp24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/RMB"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp11"
                        android:layout_toRightOf="@+id/tv_money"
                        android:layout_alignBaseline="@+id/tv_money"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_money"
                    android:layout_marginTop="@dimen/dp25"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_commercial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当月激活商户0人"
                        android:textSize="@dimen/sp11"
                        android:textColor="@color/text_black"/>

                    <View
                        android:id="@+id/view"
                        android:layout_width="1dp"
                        android:layout_height="13dp"
                        android:background="@color/view"
                        android:layout_toRightOf="@+id/tv_commercial"
                        android:layout_marginLeft="@dimen/dp30"
                        android:layout_marginRight="@dimen/dp30" />

                    <TextView
                        android:id="@+id/tv_loweruser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当月新增下级会员0人"
                        android:textSize="@dimen/sp11"
                        android:textColor="@color/text_black"
                        android:layout_toRightOf="@+id/view"/>


                </RelativeLayout>

            </RelativeLayout>


            <!--热门推荐-->
            <RelativeLayout
                android:id="@+id/rl_hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:layout_marginTop="@dimen/dp15"
                android:layout_below="@+id/rl_results">

                <RelativeLayout
                    android:id="@+id/layout_hot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="@dimen/dp3"
                        android:layout_height="@dimen/dp14"
                        android:background="@drawable/shape5"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hot"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp14"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_below="@+id/layout_hot"
                    android:background="@drawable/shape0">

                    <RelativeLayout
                        android:id="@+id/layout_goods"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/dp10">

                        <ImageView
                            android:id="@+id/img_goods"
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:layout_centerVertical="true"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/img_goods"
                            android:layout_marginLeft="@dimen/dp18"
                            android:layout_marginRight="@dimen/dp12"
                            android:layout_marginTop="@dimen/dp5">

                            <RelativeLayout
                                android:id="@+id/layout_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_goods_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/text_black"
                                    android:textSize="@dimen/sp14"
                                    android:layout_alignParentLeft="true"/>
                                <TextView
                                    android:id="@+id/tv_attention"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/sp14"
                                    android:layout_alignParentRight="true"/>

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tv_rebate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/layout_name"
                                android:layout_marginTop="@dimen/dp5"
                                android:text=""
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:textColor="@color/main"
                                android:textSize="@dimen/sp12"/>
                            <RelativeLayout
                                android:id="@+id/layout_cash"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_rebate"
                                android:layout_alignParentBottom="true"
                                android:gravity="bottom">

                                <TextView
                                    android:id="@+id/tv_cash"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:gravity="bottom"
                                    android:textColor="@color/red"
                                    android:textSize="@dimen/sp14"
                                    android:layout_alignParentLeft="true"/>

                                <TextView
                                    android:id="@+id/tv_license"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:layout_alignBaseline="@+id/tv_cash"
                                    android:textColor="@color/text_gray"
                                    android:textSize="@dimen/sp12"
                                    android:layout_alignParentRight="true"/>

                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>



</com.scwang.smartrefresh.layout.SmartRefreshLayout>
