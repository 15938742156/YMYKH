<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item"
    android:orientation="vertical">

    <include android:id="@+id/top"
        layout="@layout/top"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/dp15"
                android:paddingRight="@dimen/dp15"
                android:paddingLeft="@dimen/dp15"
                android:paddingBottom="@dimen/dp10">

                <ImageView
                    android:id="@+id/img_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"/>

                <RelativeLayout
                    android:id="@+id/rl_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/img_logo"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_cardName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/sp16"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/sp11"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textColor="@color/red"
                        android:background="@drawable/btn_bg_corner_red"
                        android:layout_toRightOf="@+id/tv_cardName"
                        android:layout_marginLeft="@dimen/dp155"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_name"
                    android:layout_marginTop="@dimen/dp10">
                    <TextView
                        android:id="@+id/tv_average"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp13"
                        android:textColor="@color/text_black" />
                    <TextView
                        android:id="@+id/tv_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp13"
                        android:textColor="@color/text_black"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp15"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp80"
                android:layout_below="@+id/rl_1"
                android:layout_marginTop="@dimen/dp10">

                <RelativeLayout
                    android:id="@+id/rl_nianfei"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_nianfei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年费说明："
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv__nianfei_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/text_black"
                        android:layout_toRightOf="@+id/tv_nianfei"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_jianjie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_nianfei"
                    android:layout_marginTop="@dimen/dp10">
                    <TextView
                        android:id="@+id/tv_jianjie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="简介："
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv__jianjie_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/text_black"
                        android:layout_toRightOf="@+id/tv_jianjie"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_fanli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_jianjie"
                    android:layout_marginTop="@dimen/dp10">
                    <TextView
                        android:id="@+id/tv_fanli"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="返利金额："
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv__fanli_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/text_black"
                        android:layout_toRightOf="@+id/tv_fanli"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_zhouqi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_fanli"
                    android:layout_marginTop="@dimen/dp10">
                    <TextView
                        android:id="@+id/tv_zhouqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结算周期："
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv__zhouqi_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/text_black"
                        android:layout_toRightOf="@+id/tv_zhouqi"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_characteristic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_zhouqi"
                    android:layout_marginTop="@dimen/dp10">
                    <TextView
                        android:id="@+id/tv_characteristic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卡种特色："
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv__characteristic_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/text_black"
                        android:layout_below="@+id/tv_characteristic"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_raiders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_characteristic"
                    android:layout_marginTop="@dimen/dp10">
                    <TextView
                        android:id="@+id/tv_raiders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="办卡攻略："
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv__raiders_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/text_black"
                        android:layout_below="@+id/tv_raiders"/>
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/bt_shenqing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:text="确认申请办卡"
        android:background="@drawable/shape5"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/sp18"
        android:layout_margin="@dimen/dp155"/>




</RelativeLayout>
