<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/top"
        layout="@layout/top"/>

    <!--Logo图标-->
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="@dimen/dp88"
        android:layout_height="@dimen/dp88"
        android:layout_marginTop="@dimen/dp60"
        android:background="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/top"/>

    <!-- 手机号 -->
    <RelativeLayout
        android:id="@+id/line_phone"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp40"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp60"
        android:layout_below="@+id/img_logo"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30">
        <LinearLayout
            android:id="@+id/line_phone1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/img_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/phone"
                android:layout_marginLeft="@dimen/dp10"/>

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp17"
                android:inputType="phone"
                android:hint="@string/phone"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp10"
                android:textCursorDrawable="@color/text_black"/>

        </LinearLayout>
        <View
            android:id="@+id/view_gray1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/line"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp10"/>
    </RelativeLayout>

    <!-- 验证码-->
    <RelativeLayout
        android:id="@+id/rl_code"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp40"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp10"
        android:layout_below="@+id/line_phone"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:id="@+id/layout_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/code"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>
            <EditText
                android:id="@+id/et_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp17"
                android:inputType="number"
                android:hint="@string/code"
                android:background="@android:color/transparent"
                android:layout_alignLeft="@+id/img_code"
                android:layout_alignRight="@+id/bt_code"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp90"
                android:textCursorDrawable="@color/text_black"/>
            <Button
                android:id="@+id/bt_code"
                android:layout_width="@dimen/dp90"
                android:layout_height="wrap_content"
                android:textColor="@color/main"
                android:background="@drawable/btn_bg_corner_yellow"
                android:text="@string/get_code"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp14"
                android:layout_margin="@dimen/dp5"/>
        </LinearLayout>
        <View
            android:id="@+id/view_gray2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/line"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp10"/>
    </RelativeLayout>

    <!-- 登录 -->
    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_code"
        android:layout_marginTop="@dimen/dp60"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30">
        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:text="@string/login"
            android:gravity="center"
            android:background="@drawable/shape5"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18"/>
    </RelativeLayout>


</RelativeLayout>
