<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_corner_gray"
        android:padding="@dimen/dp20">

        <ImageView
            android:id="@+id/img_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/jifenweixin"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_centerVertical="true"/>

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/line"
            android:layout_height="@dimen/dp40"
            android:background="@color/jifen_line"
            android:layout_toRightOf="@+id/img_weixin"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/view"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp15"
                android:textColor="@color/text_black"
                android:text=""/>

            <TextView
                android:id="@+id/tv_weixintel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp15"
                android:textColor="@color/text_black"
                android:text=""
                android:layout_marginTop="@dimen/dp15"
                android:drawableRight="@mipmap/jifenfuzhi"
                android:drawablePadding="@dimen/dp10"/>


        </LinearLayout>

    </RelativeLayout>



</LinearLayout>
