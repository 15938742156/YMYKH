<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_cha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:background="@mipmap/iconcha"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp50"
            android:layout_above ="@+id/Layout_red"
            android:layout_marginBottom="@dimen/dp10"/>

        <RelativeLayout
            android:id="@+id/Layout_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:background="@mipmap/hongbao"
            android:layout_centerInParent="true">

            <LinearLayout
                android:id="@+id/ll_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="140dp"
                android:layout_centerHorizontal="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dp35"
                    android:layout_height="@dimen/line"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp20"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最新邀请"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="27sp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp15"
                    android:gravity="center"/>

                <ImageView
                    android:layout_width="@dimen/dp35"
                    android:layout_height="@dimen/line"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp20"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ll_num"
                android:layout_marginTop="@dimen/dp10">

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="40sp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp5"/>

            </LinearLayout>

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ll_money"
                android:layout_marginTop="@dimen/dp10"
                android:text="恭喜您获得推广红包"
                android:textSize="@dimen/sp15"
                android:textColor="@color/text_bai"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/bt_hongbao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即查看"
                android:textColor="@color/text_red"
                android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp5"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/btn"
                    android:layout_below="@+id/text"
                    android:layout_marginTop="@dimen/dp15"/>


        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>