        <!-- 意见反馈 -->
    <RelativeLayout
        android:id="@+id/rl_idea"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp40"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp70"
        android:layout_below="@+id/img_logo"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@color/line">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/line"
            android:background="@color/white">
            <TextView
                android:id="@+id/tv_idea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp16"
                android:text="@string/set_feedback"
                android:textColor="@color/text_black"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp15"/>

            <ImageView
                android:id="@+id/img_idea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/szreturn"
                android:layout_marginRight="@dimen/dp15"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>




    </RelativeLayout>

    <!-- 关于我们 -->
    <RelativeLayout
        android:id="@+id/rl_about"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp40"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp10"
        android:layout_below="@+id/rl_idea"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@color/line">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/line"
            android:background="@color/white">
            <TextView
                android:id="@+id/tv_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp16"
                android:text="@string/set_about_my"
                android:textColor="@color/text_black"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp15"/>

            <ImageView
                android:id="@+id/img_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/szreturn"
                android:layout_marginRight="@dimen/dp15"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>




    </RelativeLayout>

    <!-- 退出登录 -->
    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_about"
        android:layout_marginTop="@dimen/dp70"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30">
        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:text="@string/set_log_out"
            android:background="@drawable/shape5"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp18"/>
    </RelativeLayout>

</RelativeLayout>
