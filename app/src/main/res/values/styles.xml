<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app</item>
        <item name="colorPrimaryDark">@color/main</item>
        <item name="colorAccent">@color/app</item>
    </style>
    <!-- 底部弹出dialog -->
    <style name="dialogFullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>
    <!-- Dialog对话框 -->
    <style name="MyLoadDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:gravity">bottom</item>
    </style>
    <!-- ProgressBar -->
    <style name="loading_small" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/back</item>
        <item name="android:layout_width">25dip</item>
        <item name="android:layout_height">25dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- ProgressBar -->
    <style name="loading_small2" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/ly_loading</item>
        <item name="android:layout_width">25dip</item>
        <item name="android:layout_height">25dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 加载转圈圈 -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--升级-->
    <style name="BaseDialog" parent="android:Theme.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>
    <!-- 密码输入框样式 -->
    <style name="EditTextPasswordStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_edittext_border</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:maxLength">1</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:enabled">true</item>
    </style>
    <!-- 点击头像弹窗拍照窗口 -->
    <style name="mypopwindow_style">

        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/pop_xianshi</item>

        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/pop_yincang</item>
    </style>

    <!-- Navigation Header -->
    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">@color/navpage</item>
    </style>
</resources>
